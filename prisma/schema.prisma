generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String
  bio       String?
  status    Status?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  room      Room[]    @relation("chatroom")
  Message   Message[]
}

model Room {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  users   User[]    @relation("chatroom")
  Message Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  senderId  Int
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id])
  sender    User     @relation(fields: [senderId], references: [id])
  message   String
  createdAt DateTime @default(now())
}

enum Status {
  ONLINE
  OFFLINE
  BUSY
}
